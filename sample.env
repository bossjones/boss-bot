# Discord Configuration
DISCORD_BOT_TOKEN=""  # Your Discord bot token from Discord Developer Portal
DISCORD_CLIENT_ID=""  # Your Discord application client ID
DISCORD_SERVER_ID=""  # Default server ID for the bot
DISCORD_ADMIN_USER_ID=""  # Discord user ID for admin access

# Storage Configuration
STORAGE_ROOT="/tmp/boss-bot"  # Root directory for file storage
MAX_FILE_SIZE_MB="50"  # Maximum file size in MB
MAX_CONCURRENT_DOWNLOADS="5"  # Maximum concurrent downloads
MAX_QUEUE_SIZE="50"  # Maximum queue size for downloads

# Monitoring Configuration
LOG_LEVEL="INFO"  # Logging level (DEBUG, INFO, WARNING, ERROR)
ENABLE_METRICS="true"  # Enable Prometheus metrics
METRICS_PORT="9090"  # Port for Prometheus metrics
ENABLE_HEALTH_CHECK="true"  # Enable health check endpoint
HEALTH_CHECK_PORT="8080"  # Port for health check endpoint

# Security Configuration
RATE_LIMIT_REQUESTS="100"  # Number of requests per time window
RATE_LIMIT_WINDOW_SECONDS="60"  # Time window for rate limiting in seconds
ENABLE_FILE_VALIDATION="true"  # Enable file validation and security checks

# Optional Integrations
SENTRY_DSN=""  # Sentry DSN for error tracking
OPENAI_API_KEY=""  # OpenAI API key for AI features

# Development Settings
DEBUG="false"  # Enable debug mode
ENVIRONMENT="production"  # Environment (development, staging, production)
